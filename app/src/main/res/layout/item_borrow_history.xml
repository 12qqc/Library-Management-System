<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/historyCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/historyBookTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/historyBorrowDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Borrowed: YYYY-MM-DD"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/historyReturnDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Returned: YYYY-MM-DD"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/historyStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:padding="4dp"
            android:background="@drawable/rounded_corner_background" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>














