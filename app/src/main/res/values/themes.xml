<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="Theme.Library_Management" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <item name="editTextStyle">@style/Widget.Material3.TextInputEditText.OutlinedBox</item>
    </style>

    <!-- Beautiful Button Styles -->
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Button.Accent" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Beautiful Card Styles -->
    <style name="Card.Beautiful" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Beautiful EditText Styles -->
    <style name="EditText.Beautiful" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="boxStrokeColor">@color/primary</item>
    </style>

    <!-- Beautiful Text Styles -->
    <style name="Text.Heading" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="Text.Subtitle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Activity Transition Styles -->
    <style name="ActivityTransition" parent="Theme.Library_Management">
        <!-- Removed animation attributes that cause layout preview issues -->
    </style>

    <!-- Custom Toolbar Theme Overlay -->
    <style name="ThemeOverlay.App.Toolbar" parent="ThemeOverlay.Material3.Dark">
        <item name="colorOnSurface">@color/text_on_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
    </style>
</resources>
