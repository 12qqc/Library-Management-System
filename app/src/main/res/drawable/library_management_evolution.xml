<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Evolution gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#1A1A2E"
                android:centerColor="#16213E"
                android:endColor="#0F3460"
                android:type="linear" />
        </shape>
    </item>

    <!-- Ancient library pillars -->
    <item android:left="20dp">
        <shape android:shape="rectangle">
            <size android:width="30dp" />
            <solid android:color="#2C2C54" />
        </shape>
    </item>

    <item android:right="20dp">
        <shape android:shape="rectangle">
            <size android:width="30dp" />
            <solid android:color="#2C2C54" />
        </shape>
    </item>

    <!-- Traditional books on ancient shelves -->
    <item android:top="80dp" android:left="60dp">
        <shape android:shape="rectangle">
            <size android:width="25dp" android:height="60dp" />
            <solid android:color="#8B4513" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:top="80dp" android:left="90dp">
        <shape android:shape="rectangle">
            <size android:width="25dp" android:height="60dp" />
            <solid android:color="#654321" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:top="80dp" android:left="120dp">
        <shape android:shape="rectangle">
            <size android:width="25dp" android:height="60dp" />
            <solid android:color="#A0522D" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Modern digital interface overlay -->
    <item android:left="60dp" android:top="160dp">
        <shape android:shape="rectangle">
            <size android:width="280dp" android:height="200dp" />
            <solid android:color="#10FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Digital screens -->
    <item android:top="140dp" android:left="90dp">
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="30dp" />
            <solid android:color="#1a1a1a" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:top="140dp" android:right="90dp">
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="30dp" />
            <solid android:color="#1a1a1a" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Screen glow effects -->
    <item android:top="145dp" android:left="95dp">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="20dp" />
            <solid android:color="#40FFFFFF" />
            <corners android:radius="1dp" />
        </shape>
    </item>

    <!-- Data streams connecting old and new -->
    <item android:top="100dp" android:left="140dp">
        <shape android:shape="rectangle">
            <size android:width="3dp" android:height="80dp" />
            <solid android:color="#FFD700" />
        </shape>
    </item>

    <item android:top="140dp" android:left="110dp">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="3dp" />
            <solid android:color="#FFD700" />
        </shape>
    </item>

    <item android:top="140dp" android:right="110dp">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="3dp" />
            <solid android:color="#FFD700" />
        </shape>
    </item>

    <!-- Evolution particles -->
    <item android:top="50dp" android:left="80dp">
        <shape android:shape="oval">
            <size android:width="6dp" android:height="6dp" />
            <solid android:color="#FFD700" />
        </shape>
    </item>

    <item android:top="60dp" android:right="70dp">
        <shape android:shape="oval">
            <size android:width="4dp" android:height="4dp" />
            <solid android:color="#FFD700" />
        </shape>
    </item>

    <item android:bottom="50dp" android:left="100dp">
        <shape android:shape="oval">
            <size android:width="5dp" android:height="5dp" />
            <solid android:color="#FFD700" />
        </shape>
    </item>

    <!-- Central evolution core -->
    <item android:left="175dp" android:top="275dp">
        <shape android:shape="oval">
            <size android:width="50dp" android:height="50dp" />
            <solid android:color="#FFD700" />
        </shape>
    </item>

    <!-- Evolution rings -->
    <item android:left="160dp" android:top="260dp">
        <shape android:shape="oval">
            <size android:width="80dp" android:height="80dp" />
            <stroke android:width="2dp" android:color="#40FFD700" />
        </shape>
    </item>

    <item android:left="140dp" android:top="240dp">
        <shape android:shape="oval">
            <size android:width="120dp" android:height="120dp" />
            <stroke android:width="1dp" android:color="#20FFD700" />
        </shape>
    </item>

    <!-- Future technology elements -->
    <item android:top="30dp" android:right="40dp">
        <shape android:shape="oval">
            <size android:width="8dp" android:height="8dp" />
            <solid android:color="#00BCD4" />
        </shape>
    </item>

    <item android:bottom="30dp" android:left="50dp">
        <shape android:shape="oval">
            <size android:width="7dp" android:height="7dp" />
            <solid android:color="#4CAF50" />
        </shape>
    </item>

    <!-- Knowledge transfer symbols -->
    <item android:top="120dp" android:left="160dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <size android:width="15dp" android:height="15dp" />
                <solid android:color="#FF5722" />
            </shape>
        </rotate>
    </item>

    <item android:bottom="120dp" android:right="160dp">
        <shape android:shape="oval">
            <size android:width="12dp" android:height="12dp" />
            <solid android:color="#9C27B0" />
        </shape>
    </item>
</layer-list>