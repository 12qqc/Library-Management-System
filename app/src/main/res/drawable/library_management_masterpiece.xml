<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Masterpiece gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#0D1B2A"
                android:centerColor="#1B263B"
                android:endColor="#415A77"
                android:type="linear" />
        </shape>
    </item>

    <!-- Central library management hub -->
    <item android:left="50dp" android:top="150dp">
        <shape android:shape="oval">
            <size android:width="300dp" android:height="300dp" />
            <solid android:color="#10FFFFFF" />
        </shape>
    </item>

    <!-- Knowledge rings emanating from center -->
    <item android:left="0dp" android:top="100dp">
        <shape android:shape="oval">
            <size android:width="400dp" android:height="400dp" />
            <stroke android:width="2dp" android:color="#30FFFFFF" />
        </shape>
    </item>

    <item android:left="-50dp" android:top="50dp">
        <shape android:shape="oval">
            <size android:width="500dp" android:height="500dp" />
            <stroke android:width="1dp" android:color="#20FFFFFF" />
        </shape>
    </item>

    <!-- Library management icons orbiting -->
    <!-- Books -->
    <item android:top="100dp" android:left="120dp">
        <shape android:shape="rectangle">
            <size android:width="20dp" android:height="28dp" />
            <solid android:color="#FFF8DC" />
            <corners android:radius="1dp" />
        </shape>
    </item>

    <!-- Users -->
    <item android:top="80dp" android:right="140dp">
        <shape android:shape="oval">
            <size android:width="16dp" android:height="16dp" />
            <solid android:color="#87CEEB" />
        </shape>
    </item>

    <!-- Management systems -->
    <item android:bottom="100dp" android:left="140dp">
        <shape android:shape="rectangle">
            <size android:width="24dp" android:height="16dp" />
            <solid android:color="#98FB98" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Data streams -->
    <item android:bottom="80dp" android:right="120dp">
        <shape android:shape="rectangle">
            <size android:width="12dp" android:height="20dp" />
            <solid android:color="#FFB6C1" />
            <corners android:radius="1dp" />
        </shape>
    </item>

    <!-- Digital library elements -->
    <item android:top="60dp" android:left="200dp">
        <shape android:shape="oval">
            <size android:width="8dp" android:height="8dp" />
            <solid android:color="#FFD700" />
        </shape>
    </item>

    <item android:top="200dp" android:right="80dp">
        <shape android:shape="oval">
            <size android:width="6dp" android:height="6dp" />
            <solid android:color="#FFD700" />
        </shape>
    </item>

    <item android:bottom="120dp" android:left="80dp">
        <shape android:shape="oval">
            <size android:width="10dp" android:height="10dp" />
            <solid android:color="#FFD700" />
        </shape>
    </item>

    <!-- Library management network connections -->
    <item android:top="120dp" android:left="160dp">
        <shape android:shape="rectangle">
            <size android:width="1dp" android:height="40dp" />
            <solid android:color="#60FFFFFF" />
        </shape>
    </item>

    <item android:top="160dp" android:left="120dp">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="1dp" />
            <solid android:color="#60FFFFFF" />
        </shape>
    </item>

    <!-- Floating management particles -->
    <item android:top="40dp" android:left="60dp">
        <shape android:shape="oval">
            <size android:width="3dp" android:height="3dp" />
            <solid android:color="#80FFFFFF" />
        </shape>
    </item>

    <item android:top="180dp" android:right="40dp">
        <shape android:shape="oval">
            <size android:width="4dp" android:height="4dp" />
            <solid android:color="#70FFFFFF" />
        </shape>
    </item>

    <item android:bottom="60dp" android:left="180dp">
        <shape android:shape="oval">
            <size android:width="5dp" android:height="5dp" />
            <solid android:color="#90FFFFFF" />
        </shape>
    </item>

    <!-- Central library management core -->
    <item android:left="160dp" android:top="260dp">
        <shape android:shape="oval">
            <size android:width="80dp" android:height="80dp" />
            <solid android:color="#20FFFFFF" />
        </shape>
    </item>

    <!-- Core management symbol -->
    <item android:left="180dp" android:top="280dp">
        <shape android:shape="oval">
            <size android:width="40dp" android:height="40dp" />
            <solid android:color="#FFD700" />
        </shape>
    </item>
</layer-list>